{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2018", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["node", "jest"],
    "rootDir": "."
  },
  "include": ["src/**/*", "bin/**/*", "tests/**/*", "*.js", "*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
